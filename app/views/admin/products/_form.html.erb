<% if product.errors.any? %>
<ul>
  <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div>
<%= form_for ([:admin, product]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
</br>
  <%= f.label :status %>
  <%= f.select :status, Product.statuses.keys %>
</br>
  <%= f.label :description %>
  <%= f.text_area :description %>
</br>
  <%= f.label :list_price %>
  <%= f.number_field :list_price %>
</br>
  <%= f.label :sell_price %>
  <%= f.number_field :sell_price %>
</br>
  <%= f.label :SKU %>
  <%= f.number_field :SKU %>
</br>
  <% @product.images.each do |image| %>
    <%= image_tag image.variant(resize: '500x300') if @product.images.attached? %>
  <% end %>
</br>
  <%= f.label :images %>
  <%= f.file_field :images, multiple: true %>
</br>
  <%= f.submit %>
<% end %>
</div>

<%= link_to 'Back', admin_products_path %>